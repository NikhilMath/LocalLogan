---
export interface Props {}

const {} = Astro.props;
---

<div id="email-popup-overlay"></div>

<div id="email-popup" class="email-popup">
  <h2>
    Enjoying the site?<br /> Subscribe to our newsletter for updates!
  </h2>
  <form>
    <input type="email" placeholder="Enter your email" id="email-input" />
    <button type="submit">Subscribe</button>
  </form>
</div>

<script>
  // Find our component DOM on the page.
  var emailPopupOverlay = document.getElementById("email-popup-overlay");
  // Get the email popup element
  var emailPopup = document.getElementById("email-popup");

  // Get the email input element
  var emailInput = document.getElementById("email-input") as HTMLInputElement;

  // Get the subscribed flag from local storage
  var subscribed = localStorage.getItem("subscribed") === "true";

  // Show the email popup if the user is not subscribed
  if (!subscribed) {
    setTimeout(showPopup, 5000);
  } else {
    hidePopup();
  }

  function showPopup() {
    emailPopupOverlay.style.display = "block";
    emailPopup.style.display = "block";
  }

  function hidePopup() {
    emailPopupOverlay.style.display = "none";
    emailPopup.style.display = "none";
  }

  // Function to subscribe the user
  function subscribe(event) {
    // Prevent the form from submitting
    event.preventDefault();

    // Get the email address from the input element
    var email = emailInput.value;

    // TODO: Implement email subscription logic
    console.log("Subscribing email: " + email);

    // Set the subscribed flag in local storage
    localStorage.setItem("subscribed", "true");

    // Hide the email popup
    hidePopup();
  }

  var form = document.querySelector("form");
  if (form) form.addEventListener("submit", subscribe);
</script>

<style>
  #email-popup-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5); /* semi-transparent black */
    z-index: 9998; /* put the overlay behind the popup */
  }

  .email-popup {
    display: none;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #fff;
    padding: 20px;
    border: 1px solid #ccc;
    box-shadow: 0 0 10px rgba(90, 90, 90, 0.5);
    border-radius: 15px;
    z-index: 9999;
    text-align: center;
    height: 30vh;
  }

  .email-popup h2 {
    font-size: 24px;
    margin-bottom: 20px;
  }

  .email-popup input[type="email"] {
    padding: 10px;
    font-size: 16px;
    width: 100%;
    border: 1px solid #ccc;
    margin-bottom: 10px;
  }

  .email-popup button[type="submit"] {
    padding: 10px 20px;
    font-size: 16px;
    background-color: #333;
    color: #fff;
    border: none;
    cursor: pointer;
  }
</style>
