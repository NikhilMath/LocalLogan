---
export interface Props {}

const {} = Astro.props;
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<nav class="navbar navbar-expand-md navbar-light">
  <div class="container-fluid">
    <a class="navbar-brand d-md-none" href="#">
      <img src="/assets/images/black.png" alt="" />
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mx-auto">
        <li class="nav-item">
          <a
            class="nav-link"
            aria-current={currentPath === "" ? "page" : false}
            href="/">Event Calendar</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link"
            aria-current={currentPath === "social-welfare" ? "page" : false}
            href="/social-welfare">Social Welfare</a
          >
        </li>
        <a class="navbar-brand d-none d-md-block" href="#">
          <img src="/assets/images/black.png" alt="" />
        </a>
        <li class="nav-item">
          <a
            class="nav-link"
            aria-current={currentPath === "date-ideas" ? "page" : false}
            href="/date-ideas">Date Ideas</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link"
            aria-current={currentPath === "contact-us" ? "page" : false}
            href="/contact-us">Contact</a
          >
        </li>
      </ul>
    </div>
  </div>
</nav>

<style></style>
